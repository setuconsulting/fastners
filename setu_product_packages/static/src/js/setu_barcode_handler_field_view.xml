<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="setu_product_packages.MobileBarcodeField">

         <div class="custom_o_stock_barcode_container d-md-none position-relative mx-auto d-inline-block mt-4 mb-5">
                <div class="custom_o_stock_mobile_barcode_container">
                    <button class="btn btn-primary custom_o_stock_mobile_barcode" t-on-click="openMobileScanner">
                        <i class="fa fa-camera fa-2x o_mobile_barcode_camera"/>
                        Tap to scan
                    </button>
                    <img src="/barcodes/static/img/barcode.png" alt="Barcode" class="img-fluid mb-1 mt-1"/>
                </div>
             <span class="custom_o_stock_barcode_laser"/>
            </div>
    </t>
</templates>